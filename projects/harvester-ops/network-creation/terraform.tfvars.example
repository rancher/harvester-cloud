## -- Specifies the username used for SSH authentication (Harvester nodes).
ssh_username = "opensuse"

## -- Specifies the number of networks to be created on Harvester Nested VM's. Only the first one will be automatically configured as a VM Network on Harvester, while the rest will remain available on the nodes to be manually configured via the Harvester UI.
cluster_network_count = 1

## -- Specifies the name of the Harvester Cluster Network.
cluster_network_name = "cluster-vlan"

## -- Specifies the name of the VLAN configuration for the Harvester Cluster Network.
cluster_network_vlanconfig_name = "cluster-vlan-all-nodes"

## -- Specifies the list of NICs used for the Harvester Cluster Network VLAN.
cluster_network_vlan_nic = "virbr2"

## -- Specifies the bond mode for the Harvester Cluster Network VLAN.
cluster_network_vlan_bond_mode = "active-backup"

## -- Specifies the name of the Harvester VM network.
network_name = "vlan2"

## -- Specifies the namespace where the Harvester VM network is created.
network_namespace = "default"

## -- Specifies the VLAN ID for the Harvester VM network.
network_vlan_id = 1

## -- Specifies the routing mode for the Harvester VM network.
network_route_mode = "auto"

## -- Specifies the DHCP server IP address for the network route.
network_route_dhcp_server_ip = ""

## -- Specifies the URL of the Harvester cluster API.
harvester_url = ""

## -- Specifies the full path where the Kubeconfig file is located.
kubeconfig_file_path = ""

## -- Specifies the name of the Kubeconfig file used to access the Harvester cluster.
kubeconfig_file_name = ""

## -- Specifies the full path where the private SSH key file is located.
private_ssh_key_file_path = ""

## -- Specifies the name of the private SSH key file used for authentication.
private_ssh_key_file_name = ""

## -- Specifies whether the Harvester cluster is deployed in an air-gapped environment without internet access. When set to 'true', internet connectivity is disabled on all nodes.
harvester_airgapped = false
